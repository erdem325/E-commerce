{% extends 'admin/adminbase.html.twig' %}
{% block content %}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-xs-6 col-sm-6">
                <div class="card" style="padding:20px;">
                    <h1 class="page-head-line"> Üye Ekleme</h1>
                        <form method="post" class="modal-form" style="margin-top: 20px;">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="user[name]">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="email"  class="form-control" name="user[email]">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label>Password</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="password"  class="form-control" name="user[password]">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label>Roles</label>
                                </div>
                                <div class="col-md-6">
                                    <select name="user[roles]" class="form-control">
                                        <option>ROLE_ADMIN</option>
                                        <option>ROLE_USER</option>
                                        <option>ROLE_POWER</option>
                                        <option>ROLE_MEMBER</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label> Status</label>
                                </div>
                                <div class="col-md-6">
                                    <select name="user[status]" class="form-control">
                                        <option>True</option>
                                        <option>False</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <a href="{{ path('user_index') }}" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-arrow-left"> </span> Listeye Geri Dön</a>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-success btn-block"><span class="glyphicon glyphicon-check"></span> Üye Ekle </button>
                                </div>
                            </div>
        </form>

{% endblock %}

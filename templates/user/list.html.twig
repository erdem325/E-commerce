<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6"><h1>Üye Listesi</h1></div>
                <div style="padding-right: 235px;" class="col-md-6 text-right"><a href="{{ path('user_new') }}"
                                  class="btn btn-success"><i class="fa fa-plus"></i>Üye Ekle</a>
                </div>
            </div>
            <table class="table table-striped mt-3">
              <thead class="thead-dark">
                <th>ID</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>STATUS</th>
                <th>ROLES</th>
                <th>EDIT</th>
                <th>DELETE</th>
              </thead>
              <tbody>
              {% for kisi in user %}
                <tr>
                    <td>{{ kisi.id }}</td>
                    <td>{{ kisi.name }}</td>
                    <td>{{ kisi.email }}</td>
                    <td>{{ kisi.status }}</td>
                    <td>{% for item in kisi.roles %}
                            {{ item }}
                        {% endfor %}
                    </td>
                    <td><a href="{{ path('user_edit', {'id': kisi.id}) }}" class="btn btn-primary btn-block"><i class="fa fa-edit"></i>Edit</a></td>
                    <td>{{ include('user/_delete_form.html.twig') }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
        </div>
    </div>
</div>


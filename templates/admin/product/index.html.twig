{% extends 'admin/adminbase.html.twig' %}

{% block content %}
    <div class="content mt-3">

            <div class="row">
                <div class="col-md-8">
                    <div class="col-md-6"><h1>Ürün Listesi</h1></div>
                    <div class="col-md-6 text-right"><a href="{{ path('admin_product_new') }}"
                                  class="btn btn-danger col-md-3"><i class="fa fa-plus"></i> Ürün Ekle</a>
                    </div>
                </div>


                    <table class="table table-striped mt-3">
                        <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Pprice</th>
                            <th>Sprice</th>
                            <th>Min</th>
                            <th>Image</th>
                            <th>Galery</th>
                            <th>Category_id</th>
                            <th>Status</th>
                            <th>Show</th>
                            <th>Edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.title }}</td>
                                <td>{{ product.amount }}</td>
                                <td>{{ product.pprice }}</td>
                                <td>{{ product.sprice }}</td>
                                <td>{{ product.min }}</td>
                                <td>
                                    <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id}) }}','','toolbar-no,location=no,directories=0,status=no,top=100,left=200,manuBar=no,scrollBars=no,resizable=no,width=900,height=600');">
                                        {% if product.image ==null %}
                                            <img src="{{ asset('admin') }}/img/imageicon.png" height="32"/>
                                        {% else %}
                                            <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="40">
                                        {% endif %}
                                    </a>
                                </td>
                                <td>
                                    <a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id}) }}','','toolbar-no,location=no,directories=0,status=no,top=100,left=200,manuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                    <img src="{{ asset('admin') }}/img/galeryicon.png" height="32"/>
                                    </a>
                                </td>

                                <td>{{ product.categoryId }}</td>
                                <td>{{ product.status }}</td>
                                <td><a href="{{ path('admin_product_show', {'id': product.id}) }}"
                                       class="btn btn-primary btn-block"><i class="fa fa-search"></i> Göster</a></td>
                                <td><a href="{{ path('admin_product_edit', {'id': product.id}) }}"
                                       class="btn btn-success btn-block"><i class="fa fa-edit"></i> Düzenle</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="18">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

    </div>
{% endblock %}

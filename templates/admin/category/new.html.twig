{% extends 'admin/adminbase.html.twig' %}




{% block content %}
<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">

            <div class="col-xs-6 col-sm-6">
                <div class="card" style="padding:20px;">
                    <h1 class="page-head-line">Kategori Ekle</h1>

             <form method="post" style="margin-top: 20px;">
                 <div class="form-group row">
                     <div class="col-md-6">
                    <label>ParentId</label>
                </div>
                     <div class="col-md-6">
                    <select name="category[parentid]" class="form-control">
                        <option>{{ category.parentid }}</option>
                        <option value="0">Ana Kategori</option>
                        {% for cat in catlist %}

                        <option value="{{ cat.id }}">{{ cat.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

                 <div class="form-group row">
                     <div class="col-md-6">
                    <label>Title</label>
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" name="category[title]">
                </div>
            </div>

                 <div class="form-group">
                     <div class="row">
                         <div class="col-md-6">
                    <label>description</label>
                </div>
                         <div class="col-md-6">
                    <input type="text" class="form-control" name="category[description]">
                </div>
            </div>
        </div>
                 <div class="form-group row">
                     <div class="col-md-6">
                    <label>keywords</label>
                </div>
                     <div class="col-md-6">
                    <input type="text" class="form-control" name="category[keywords]">
                </div>
            </div>


                 <div class="form-group row">
                     <div class="col-md-6">
                    <label> Status</label>

                </div>
                  <div class="col-md-6">
                    <select name="category[status]" class="form-control">
                        <option>{{ category.status }}</option>
                        <option>True</option>
                        <option>False</option>
                    </select>
                </div>
            </div>

                 <div class="form-group row">
                        <div class="col-md-6">
                            <a href="{{ path('admin_category_index') }}" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-arrow-left"> </span> Listeye Geri DÃ¶n</a>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-check"></span> Kaydet </button>
                        </div>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}

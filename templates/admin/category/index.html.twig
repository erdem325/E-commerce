{% extends 'admin/adminbase.html.twig' %}



{% block content %}
    <div class="content mt-3">
                        <div class="animated fadeIn">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6"><h1>Kategori Listesi</h1></div>
                                    <div style="padding-right: 100px;" class="col-md-6 text-right"><a href="{{ path('admin_category_new') }}"
                                                                        class="btn btn-danger col-md-3"><i class="fa fa-plus"></i> Kategori Ekle</a>
                                    </div>
                                </div>


                    <table class="table table-striped mt-3">
                        <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Parentid</th>
                            <th>Title</th>
                            <th>Keywords</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Created_at</th>
                            <th>Update_at</th>
                            <th>Show</th>
                            <th>Edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.parentname }}</td>
                                <td>{{ category.title }}</td>
                                <td>{{ category.keywords }}</td>
                                <td>{{ category.description }}</td>
                                <td>{{ category.status }}</td>
                                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ category.updateAt ? category.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td><a href="{{ path('admin_category_show', {'id': category.id}) }}"
                                       class="btn btn-primary btn-block"><i class="fa fa-search"></i> Göster</a></td>
                                <td><a href="{{ path('admin_category_edit', {'id': category.id}) }}"
                                       class="btn btn-success btn-block"><i class="fa fa-edit"></i> Düzenle</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

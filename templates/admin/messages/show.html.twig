{% extends 'admin/adminbase.html.twig' %}

{% block title %}Messages{% endblock %}

{% block content %}

    <h1>Messages</h1>

    <table class="table table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Comment</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.name }}</td>
                    <td>{{ message.email }}</td>
                    <td>{{ message.subject }}</td>
                    <td>{{ message.message }}</td>
                    <td>{{ message.comment }}</td>
                    <td>{{ message.status }}</td>
                </tr>
        </tbody>
    </table>

    <div class="col-md-6"><a href="{{ path('admin_messages_index') }}" class="btn btn-primary btn-block">Back To List</a></div>
    <div class="col-md-6"> {{ include('admin/messages/_delete_form.html.twig')  }}</div>
    <br>

    <div class="col-md-6" style="margin-top: 30px">
    <form action="{{ path('admin_messages_update',{'id':message.id}) }}" style="margin-left: 15px" method="post">
        <h3>Cevap Yaz</h3>
        <textarea name="comment" rows="3" cols="65%"> {{ message.comment }} </textarea>
        <input class="btn btn-block" type="submit" value="Update">
    </form>
    </div>
{% endblock %}

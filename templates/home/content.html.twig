<div class="col-lg-12 float-md-right">
    <div class="sidebar_main_content_area">
        <div class="fillter_home_sidebar">
            <div class="home_l_product_slider owl-carousel owl-loaded owl-drag">
                <div class="owl-stage-outer">

                        <div class="row">
                            {% for rs in slider %}
                                <div class="col-lg-4 col-sm-6">
                                    <div class="l_product_item">
                                        <div class="l_p_img">
                                            <img src="{{ asset('uploads') }}/images/{{ rs.image }}" height="250px" width="400px">
                                        </div>
                                        <div class="l_p_text">
                                            <ul>
                                                <li><a class="add_cart_btn" href="{{ path('product_detail', {'id': rs.id}) }}"><i class="fa fa-plus"></i> VIEW</a></li>
                                            </ul>
                                            <h4>{{ rs.title }}</h4>
                                            <h5>
                                                <del>{{ rs.sprice }} ₺</del>
                                                {{ rs.pprice }} ₺
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                </div>
            </div>

        </div>
    </div>
</div>
